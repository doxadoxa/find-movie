<div class="container movies">
	<div class="row">
		{{#each model as |movie|}}
				<div class="movies__item">
					<div class="movies__item-inner" style="background-image: url(http://image.tmdb.org/t/p/w500{{movie.poster_path}})">
						<div class="movies__item-adding">
							<ul class="movies__item-info">
								<li>{{movie.genre_ids.name}}</li>
								<li>{{release-year movie.release_date}}</li>
								<li>Россия</li>
							</ul>
						</div>
						{{#link-to 'movie' movie.id class="movies__item-link"}}
							<div class="movies__item-description">
								
									<h3>{{movie.title}}</h3>
								
							</div>
						{{/link-to}}
					</div>
				</div>
		{{/each}}
		{{outlet}}
	</div>
</div>

